* {
  margin: 0;
  padding: 0;
  spacing: 0;

  /* sonokai sushia */

  fg: #e3e1e4;
  bg: #2d2a2e;
  bg-alt: #423f46; /* bg3 */
  bg-sel: #37343a; /* bg1 */
  fg-sel: #7accd7;

  background-color: @bg;
  text-color: @fg;
}

window {
  transparency: "real";
  width: 600px;
  border: 1px;
  border-color: #848089;
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  background-color: @bg-alt;
  children: [prompt, entry];
}

entry {
  background-color: inherit;
  padding: 4px 4px;
}

prompt {
  background-color: inherit;
  padding: 4px 8px 4px 8px;
}

listview {
  lines: 8;
}

element {
  children: [element-index,element-text];
}

element-text {
  padding: 4px;
  highlight: none;
}

element-text selected {
  background-color: @bg-sel;
  text-color: @fg-sel;
}

element-index {
  background-color: inherit;
  padding: 4px 8px 4px 8px;
  text-color: @bg-alt;
}

element-index selected {
  background-color: @bg-sel;
  text-color: @fg-sel;
  highlight: bold;
}