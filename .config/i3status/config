# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
#        color_good = "#59AFFD"
#        color_degraded = "#DC322F"
        color_good = "#FFFFFF"
        color_bad = "#586E75"
        color_degraded = "#C36060"
}


# order += "ipv6"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "disk /"
order += "disk /home"
# order += "disk /home"
order += "memory"
order += "volume master"
order += "read_file backlight"
order += "wireless wlan0"
order += "ethernet _first_"
order += "battery all"
# order += "load"
order += "tztime local"

cpu_usage {
        format = " ❖ %usage "
}

cpu_temperature 0 {
        format = " ♨ %degrees °C "
        path = "/sys/class/thermal/thermal_zone0/temp"
}

load {
        format = " load %1min "
        # max_threshold = 0.3
}

disk "/" {
        # format = " hdd %avail "
        format = " ⛁ %avail "
}

disk "/home" {
        # format = " hdd %avail "
        format = " ⛀ %avail "
}

wireless wlan0 {
        format_up = " ≋%quality "
        format_down = " ≉ "
        #format_quality = "%03d%s"
}

ethernet _first_ {
# if you use %speed, i3status requires root privileges
        format_up = " ⛖ "
        format_down = " ⛗ "
}

battery all {
        # format = "%status %percentage %remaining %emptytime"
        format = " %status %percentage "
        format_down = "No battery"
        last_full_capacity = true
        integer_battery_capacity = true
        status_chr = "⭍ "
        status_bat = "↯"
        status_unk = ""
        status_full = "☻"
        low_threshold = 15
        threshold_type = time
}

memory {
        format = " ⮻ %used / %available "
        threshold_degraded = "2G"
        format_degraded = " ⮼ MEMORY < %available "
}

volume master {
    device = "pulse"
    format = " ♬ %volume "
    format_muted = " ♬ × "
}

tztime local {
        # format = "%Y-%m-%d %H:%M:%S"
        format = " ⏲ %d.%m. %H:%M "
}

read_file backlight {
        path = "/sys/class/backlight/intel_backlight/brightness"
        format = " ☼ %content "
}
