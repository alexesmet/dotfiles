layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="tab-bar"
        }
        children
    }
    tab focus=true name="nvim" {
        pane command="nvim" 
    }
    tab name="git" {
        pane command="lazygit" 
    }
    tab name="term" {
        pane
        pane size=1 borderless=true {
            plugin location="status-bar"
        }
    }
}
