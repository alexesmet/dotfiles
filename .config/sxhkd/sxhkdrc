# wm independent hotkeys

# terminal emulator
super + {_,shift +} Return
	alacritty --class {Alacritty,Floating},Alacritty
super + t
	alacritty --class Floating,Alacritty


# program launcher
# j4-dmenu-desktop --dmenu="dmenu -l 10 -c -i -nb '#282828' -nf '#EBDBB2' -sb '#EBDBB2' -sf '#1d2021' -fn 'Cozette'"
super + d
	rofi -show drun
# focus the last node/desktop
super + Tab
	# rofi -show window

# more featured program launcher
super + shift + d
    jgmenu_run

super + x
    speedcrunch
super + g
    galendae

super + h
    dunstctl history-pop

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd


# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# FUNCTIONAL KEYS


XF86AudioMute
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle; \
	notify-send -c device -h int:value:`bc <<< "$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d' ' -f2)*100"` -r 84161322 "Volume = $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | rg '\[.+\]' -o)"

XF86Audio{Raise,Lower}Volume
	DIR='{+,-}'; \
	wpctl set-volume -l 1.5 @DEFAULT_AUDIO_SINK@ 5%$DIR; \
	notify-send -c device -h int:value:`bc <<< "$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | cut -d' ' -f2)*100"` -r 84161322 "Volume $DIR $(wpctl get-volume @DEFAULT_AUDIO_SINK@ | rg '\[.+\]' -o)"

XF86AudioMicMute
    toggle-microhpone.sh

XF86MonBrightness{Up,Down}
	DIR='{inc,dec}'; \
    xbacklight -$DIR 5; \
	notify-send -c device -h int:value:`xbacklight -get` -r 84161324 "Brightness $DIR"

XF86Touchpad{On,Off}
	notify-send  -c device -r 84161325 "Touchpad {on,off}"
XF86Calculator
    speedcrunch
super + p
    xset dpms force off
XF86Audio{Stop,Pause,Play,Next,Prev}
    playerctl {Stop,pause,play-pause,next,previous}

Print
    scrot -z -e 'mv $f /tmp/ && xclip -selection clipboard -t image/png -i /tmp/$f'

super + shift + s
#   scrot -z -s -e 'mv $f /tmp/ && xclip -selection clipboard -t image/png -i /tmp/$f'
    flameshot gui

XF86Power{Down,Off}
    my-powermenu
super + q
    my-powermenu
super + l
    xsecurelock


# bspwm hotkeys
#

# quit/restart bspwm
super + shift + Escape
	bspc wm -r

super + ctrl + shift + p
	bspc quit

# close
super + shift + q
	bspc node -c

# alternate between the tiled and monocle layout
super + f
	bspc desktop -l next

super + r
    bspc node -R 90


#
# state/flags
#

# set the window state
super + {v,shift + v}
	bspc node -t {tiled,pseudo_tiled}

super + shift + space
    bspc node -t '~floating'

# set the node flags
super + ctrl + {m,l,z,s}
	bspc node -g {marked,locked,private,sticky}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + } {Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

super + a
    bspc node -f @parent
super + {_,shift + } w
    bspc node -f @{first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local


# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + shift + {1-9,0}
	DIR='^{1-9,10}'; \
    NOD=$(bspc query -N -n focused); \
	bspc node -d $DIR; \
	bspc desktop -f $DIR; \
    bspc node -f $NOD

super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

#
# preselct
#

# preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
 	bspc node -z {right -20 0,bottom 0 20,bottom 0 -20,right 20 0}

# # contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
